@{
    ViewData["Title"] = "Search Result";
    Layout = "~/Views/Shared/Layouts/_AuthLayout.cshtml";
}
@model SearchResultViewModel
@{
    string dm = Model.DomainName;
    string da = Model.DomainAvailability;
}
<div class="main-page p-5">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">Domain name</th>
                <th scope="col">Domain availability</th>
                @{
                    if (da == "AVAILABLE")
                    {
                        <th scope="col"></th>
                    }
                }
            </tr>
        </thead>
        <tbody>
            <tr>

                <td>@dm</td>

                @{
                    if (da == "UNAVAILABLE")
                    {
                        <td class="alert alert-danger">@da</td>
                    }
                    else if (da == "AVAILABLE")
                    {
                        <td class="alert alert-success">@da</td>                  
                        <td>
                            <form asp-controller="Purchase" asp-action="Index" method="post">
                                <input hidden value="@dm" name="Name"/>
                                <button type="submit" id="form-submit" class="btn btn-success">Buy now - $10</button>
                            </form>
                        </td>
                    }
                    else
                    {
                        <td class="alert alert-danger">@da</td>
                    }
                }
            </tr>
        </tbody>
    </table>
</div>