@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Layouts/_AuthLayout.cshtml";
}
@using DomainRegistrarWebApp.Models.Users
@model AppUser
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Login</h1>
            <div class="contact-form">
                <form id="login"  method="post">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <fieldset>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Username" class="form-control" placeholder="Username" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <fieldset>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control" placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <button type="submit" id="form-submit" class="main-button">Login</button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div><br />
    <div>
        Don't have an account? <br />
        <a href="@Url.Action("SignUp", "Auth")"> Sign up here </a><br /><br />
    </div>
</div>