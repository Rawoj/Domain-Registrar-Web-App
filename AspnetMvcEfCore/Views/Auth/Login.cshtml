@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Layouts/_AuthLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Login</h1>
            <div class="contact-form">
                <form id="login" action="" method="post">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <fieldset>
                                <input name="username" type="text" id="username" placeholder="Username" required="">
                            </fieldset>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <fieldset>
                                <input name="password" type="password" id="password" placeholder="Password" required="">
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <button type="submit" id="form-submit" class="main-button">Login</button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div><br />
    <div>
        Don't have an account? <br />
        <a href="@Url.Action("SignUp", "Auth")"> Sign up here </a><br /><br />
    </div>
</div>